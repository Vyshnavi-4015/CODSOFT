# todo_list.py

class ToDoList:
    def __init__(self):
        self.tasks = {}

    def add_task(self, task_name, due_date=None):
        if task_name in self.tasks:
            print("Task already exists!")
            return
        self.tasks[task_name] = {"due_date": due_date, "completed": False}
        print(f"Task '{task_name}' added successfully!")

    def delete_task(self, task_name):
        if task_name not in self.tasks:
            print("Task not found!")
            return
        del self.tasks[task_name]
        print(f"Task '{task_name}' deleted successfully!")

    def update_task(self, task_name, due_date=None):
        if task_name not in self.tasks:
            print("Task not found!")
            return
        if due_date:
            self.tasks[task_name]["due_date"] = due_date
        print(f"Task '{task_name}' updated successfully!")

    def mark_task_completed(self, task_name):
        if task_name not in self.tasks:
            print("Task not found!")
            return
        self.tasks[task_name]["completed"] = True
        print(f"Task '{task_name}' marked as completed!")

    def display_tasks(self):
        print("To-Do List:")
        for task_name, task_info in self.tasks.items():
            status = "Completed" if task_info["completed"] else "Pending"
            due_date = task_info["due_date"] if task_info["due_date"] else "None"
            print(f"Task: {task_name}, Due Date: {due_date}, Status: {status}")


def main():
    todo_list = ToDoList()

    while True:
        print("\nTo-Do List Menu:")
        print("1. Add Task")
        print("2. Delete Task")
        print("3. Update Task")
        print("4. Mark Task as Completed")
        print("5. Display Tasks")
        print("6. Exit")

        choice = input("Enter your choice: ")

        if choice == "1":
            task_name = input("Enter task name: ")
            due_date = input("Enter due date (optional): ")
            todo_list.add_task(task_name, due_date if due_date else None)
        elif choice == "2":
            task_name = input("Enter task name: ")
            todo_list.delete_task(task_name)
        elif choice == "3":
            task_name = input("Enter task name: ")
            due_date = input("Enter new due date (optional): ")
            todo_list.update_task(task_name, due_date if due_date else None)
        elif choice == "4":
            task_name = input("Enter task name: ")
            todo_list.mark_task_completed(task_name)
        elif choice == "5":
            todo_list.display_tasks()
        elif choice == "6":
            print("Exiting To-Do List application. Thanks For Using!")
            break
        else:
            print("Invalid choice. Please choose a valid option.")

if __name__ == "__main__":
    main()
